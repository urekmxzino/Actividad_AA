<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="6dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria: " />

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtFechaP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha Publicacion"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtTituloL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtCopias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copias"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtCantP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad Paginas"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtEditorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editorial"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtEstante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estante"
        android:textSize="24sp" />


</LinearLayout>